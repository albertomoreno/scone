
files = Split("""
	main.cpp
	private-main.cpp
	resources-manager.cpp
	music-player.cpp
	level-loader.cpp
	camera.cpp
	sprite.cpp
	bgscroller.cpp
""")

libs = ['sfml-system', 'sfml-window', 'sfml-graphics', 'sfml-audio']

Program('#bin/scone', files, LIBS=libs, CPPPATH='#include', LIBPATH='/usr/local/lib')
